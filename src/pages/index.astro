<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nightwing Haven - A Digital Garden</title>
  <meta name="description" content="Thoughts on building software with AI">
</head>
<body>
  <main class="container">
    <header class="garden-header">
      <h1>ðŸŒ¿ Nightwing Haven</h1>
      <p class="tagline">"We live in a twilight world."</p>
      <p class="intro">
        A <a href="/thoughts/digital-garden">digital garden</a> is a living collection of interconnected thoughts that grow and evolve over time.
        <a href="/thoughts/nightwing-haven">Nightwing Haven</a> is my digital garden for exploring how AI transforms software developmentâ€”from early experiments to mature insights.
      </p>
    </header>

    <div class="controls">
      <div class="filter-buttons">
        <button class="filter-btn active" data-filter="all">All</button>
        <button class="filter-btn" data-filter="seed">ðŸŒ° Seed</button>
        <button class="filter-btn" data-filter="sprout">ðŸŒ± Sprout</button>
        <button class="filter-btn" data-filter="growing">ðŸŒ¿ Growing</button>
        <button class="filter-btn" data-filter="evergreen">ðŸŒ³ Evergreen</button>
      </div>
      <div class="sort-buttons">
        <button class="sort-btn active" data-sort="title">Sort: Title</button>
        <button class="sort-btn" data-sort="updated">Sort: Updated</button>
      </div>
    </div>

    <div class="table-wrapper">
      <table class="thought-table">
        <thead>
          <tr>
            <th class="maturity-col">Status</th>
            <th class="title-col">Title</th>
            <th class="summary-col">Summary</th>
            <th class="tags-col">Tags</th>
            <th class="date-col">Updated</th>
          </tr>
        </thead>
        <tbody id="thoughts-tbody">
          {sortedThoughts.map(thought => (
            <tr data-maturity={thought.data.maturity} data-updated={thought.data.updatedAt.getTime()} data-title={thought.data.title}>
              <td class="maturity-cell">
                <span class="emoji">{maturityEmoji[thought.data.maturity]}</span>
              </td>
              <td class="title-cell">
                <a href={`/thoughts/${thought.slug}`}>
                  {thought.data.title}
                </a>
              </td>
              <td class="summary-cell">
                {thought.data.summary}
              </td>
              <td class="tags-cell">
                {thought.data.tags && thought.data.tags.length > 0 && (
                  <div class="tags">
                    {thought.data.tags.map(tag => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}
              </td>
              <td class="date-cell">
                <time>
                  {thought.data.updatedAt.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                  })}
                </time>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>

    <footer class="garden-footer">
      <p>"And we make no friends at dusk."</p>
    </footer>
  </main>

  <script>
    // Filter and sort functionality
    const filterButtons = document.querySelectorAll('.filter-btn');
    const sortButtons = document.querySelectorAll('.sort-btn');
    const tbody = document.getElementById('thoughts-tbody');
    const rows = Array.from(tbody.querySelectorAll('tr'));

    let currentFilter = 'all';
    let currentSort = 'title';

    // Filter buttons
    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        currentFilter = button.getAttribute('data-filter');
        filterButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
        applyFilterAndSort();
      });
    });

    // Sort buttons
    sortButtons.forEach(button => {
      button.addEventListener('click', () => {
        currentSort = button.getAttribute('data-sort');
        sortButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
        applyFilterAndSort();
      });
    });

    function applyFilterAndSort() {
      // Filter rows
      let filteredRows = rows.filter(row => {
        if (currentFilter === 'all') return true;
        return row.getAttribute('data-maturity') === currentFilter;
      });

      // Sort rows
      filteredRows.sort((a, b) => {
        if (currentSort === 'title') {
          return a.getAttribute('data-title').localeCompare(b.getAttribute('data-title'));
        } else if (currentSort === 'updated') {
          return parseInt(b.getAttribute('data-updated')) - parseInt(a.getAttribute('data-updated'));
        }
        return 0;
      });

      // Clear tbody
      tbody.innerHTML = '';

      // Re-append sorted and filtered rows
      filteredRows.forEach(row => tbody.appendChild(row));

      // Hide filtered out rows
      rows.forEach(row => {
        if (filteredRows.includes(row)) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });
    }
  </script>
</body>
</html>

